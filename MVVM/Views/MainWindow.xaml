<Window x:Class="UBYS_WPF.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UBYS_WPF.MVVM.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:UBYS_WPF.MVVM.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainVM}"
        mc:Ignorable="d"
        Title="Login"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">
    <Grid>
        <Border Background="#2C2C3A"
                Height="80"
                VerticalAlignment="Top">
            <TextBlock Text="University Information Management System"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Border>

        <StackPanel VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="404"
                    Margin="0,151,0,0"
                    Height="208">
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Width="321"
                     Height="40"
                     Foreground="{Binding UsernameTextColor}"
                     Background="#2C2C3A"
                     BorderBrush="#4A4A5E"
                     BorderThickness="1"
                     Margin="0,10,0,10"
                     Padding="10">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="GotFocus">
                        <i:InvokeCommandAction Command="{Binding UsernameGotFocusCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="LostFocus">
                        <i:InvokeCommandAction Command="{Binding UsernameLostFocusCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Grid x:Name="pGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="327" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="PasswordBox"
                         Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                         Foreground="{Binding PasswordTextColor}"
                         Background="#2C2C3A"
                         BorderBrush="#4A4A5E"
                         BorderThickness="1"
                         Margin="42,10,-27,10"
                         Padding="10"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                       >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="GotFocus">
                            <i:InvokeCommandAction Command="{Binding PasswordGotFocusCommand}" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="LostFocus">
                            <i:InvokeCommandAction Command="{Binding PasswordLostFocusCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <Button x:Name="TogglePasswordButton"
                        Margin="0,20,-12,20"
                        Click="TogglePasswordVisibility_Click"
                        RenderTransformOrigin="0.5,0.5"
                        Grid.Column="1">
                    <Image x:Name="PasswordToggleImage"
                           Source="/MVVM/Views/Invisible.png"
                           Width="18"
                           Height="20"
                           RenderTransformOrigin="9.015,-1.573"
                            />
                </Button>
            </Grid>

            <!-- Forgot Password -->
            <Button Content="Forgot your password?"
                    Background="Transparent"
                    Foreground="#0078D4"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"
                    Command="{Binding ForgotPasswordCommand}"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Right"
                    Click="Button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Forgot your password?"
                                   Foreground="#0078D4"
                                   TextDecorations="Underline"
                                   Cursor="Hand" />
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Log In"
                    Height="45"
                    Width="300"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    Cursor="Hand" />


        </StackPanel>
    </Grid>
</Window>
