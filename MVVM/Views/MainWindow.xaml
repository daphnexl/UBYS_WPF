<Window x:Class="UBYS_WPF.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UBYS_WPF.MVVM.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:helpers="clr-namespace:UBYS_WPF.Helpers"
        xmlns:vm="clr-namespace:UBYS_WPF.MVVM.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainVM}"
        mc:Ignorable="d"
        Title="Login"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">
   
    <Grid>

        <Border Background="#2C2C3A"
                Height="80"
                VerticalAlignment="Top">
            <TextBlock Text="University Information Management System"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Border>

        <StackPanel VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="416"
                    Margin="0,151,0,0">

            <!-- Username Input -->
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Width="322"
                     Height="45"
                     Foreground="{Binding UsernameTextColor}"
                     Background="#2C2C3A"
                     BorderBrush="#4A4A5E"
                     BorderThickness="1"
                     Padding="10">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="GotFocus">
                        <i:InvokeCommandAction Command="{Binding UsernameGotFocusCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="LostFocus">
                        <i:InvokeCommandAction Command="{Binding UsernameLostFocusCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>

            <!-- Password Input -->
            <Grid Height="45"
                  Width="416">
                <TextBox x:Name="PasswordBox"
                         Text="{Binding Password, Mode=TwoWay}"
                         Foreground="{Binding PasswordTextColor}"
                         Background="#2C2C3A"
                         BorderBrush="#4A4A5E"
                         BorderThickness="1"
                         Padding="10"
                         Visibility="{Binding TextBoxVisibility}"
                         Width="322">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="GotFocus">
                            <i:InvokeCommandAction Command="{Binding PasswordGotFocusCommand}" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="LostFocus">
                            <i:InvokeCommandAction Command="{Binding PasswordLostFocusCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>

                <PasswordBox x:Name="HiddenPasswordBox"
                             helpers:PasswordHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                             Foreground="White"
                             Background="#2C2C3A"
                             BorderBrush="#4A4A5E"
                             BorderThickness="1"
                             Padding="10"
                             Width="322"
                             Visibility="{Binding PasswordBoxVisibility}" />

                <Button Command="{Binding TogglePasswordCommand}"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right">
                    <Image Source="{Binding ToggleButtonIcon}"
                           Width="18"
                           Height="20" />
                </Button>
            </Grid>

            <!-- Forgot Password -->
            <Button Content="Forgot your password?"
                    Background="Transparent"
                    Foreground="#0078D4"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"
                    Command="{Binding ForgotPasswordCommand}"
                    HorizontalAlignment="Right"
                    Margin="0, 4, 0, 0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Forgot your password?"
                                   Foreground="#0078D4"
                                   TextDecorations="Underline"
                                   Cursor="Hand" />
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Login Button -->
            <Button Content="Log In"
                    Width="300"
                    Height="45"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    Command="{Binding LoginCommand}"
                    Cursor="Hand"
                    Margin="0,17,0,0"/>
        </StackPanel>

        <Image Margin="368,96,368,274"
               Source="/Assets/User2.ico"
               Stretch="Fill" />
        <ContentControl Content="{Binding CurrentView}" />

    </Grid>
</Window>