<Window x:Class="UBYS_WPF.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UBYS_WPF.MVVM.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:UBYS_WPF.MVVM.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainVM}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">
    <Grid>
        <Border Background="#2C2C3A"
                Height="80"
                VerticalAlignment="Top">
            <TextBlock Text="University Information Management System"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Border>

        <StackPanel VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="320"
                    Margin="0,151,0,0">
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Width="300"
                     Height="40"
                     Foreground="{Binding UsernameTextColor}"
                     Background="#2C2C3A"
                     BorderBrush="#4A4A5E"
                     BorderThickness="1"
                     Margin="0,10,0,10"
                     Padding="10">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="GotFocus">
                        <i:InvokeCommandAction Command="{Binding UsernameGotFocusCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="LostFocus">
                        <i:InvokeCommandAction Command="{Binding UsernameLostFocusCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>

            <TextBox x:Name="PasswordBox"
                     Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                     Width="300"
                     Height="40"
                     Foreground="{Binding PasswordTextColor}"
                     Background="#2C2C3A"
                     BorderBrush="#4A4A5E"
                     BorderThickness="1"
                     Margin="0,0,0,10"
                     Padding="10">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="GotFocus">
                        <i:InvokeCommandAction Command="{Binding PasswordGotFocusCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="LostFocus">
                        <i:InvokeCommandAction Command="{Binding PasswordLostFocusCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <!-- Forgot Password -->
            <Button Content="Forgot your password?"
                    Background="Transparent"
                    Foreground="#0078D4"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Forgot your password?"
                                   Foreground="#0078D4"
                                   TextDecorations="Underline"
                                   Cursor="Hand" />
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Log In"
                    Height="45"
                    Width="300"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    Cursor="Hand" />
        </StackPanel>
    </Grid>
</Window>
