<Window x:Class="UBYS_WPF.MVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UBYS_WPF.MVVM.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:helpers="clr-namespace:UBYS_WPF.Helpers"
        xmlns:vm="clr-namespace:UBYS_WPF.MVVM.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainVM,IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        Title="Login"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">
    <Window.DataContext>
        <vm:MainVM />
    </Window.DataContext>
    <Grid>

        <Border Background="#2C2C3A"
                Height="80"
                VerticalAlignment="Top">
            <TextBlock Text="University Information Management System"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Border>


        <StackPanel VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="416"
                    Margin="0,151,0,0"
                    Height="225">
            <Grid x:Name="ıdGrid"
                  Height="65"
                  Width="416">
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Width="322"
                         Height="45"
                         Foreground="{Binding UsernameTextColor}"
                         Background="#2C2C3A"
                         BorderBrush="#4A4A5E"
                         BorderThickness="1"
                         Margin="0,10,0,10"
                         Padding="10">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="GotFocus">
                            <i:InvokeCommandAction Command="{Binding UsernameGotFocusCommand}" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="LostFocus">
                            <i:InvokeCommandAction Command="{Binding UsernameLostFocusCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
            </Grid>
            <Grid x:Name="pGrid"
                  Height="65"
                  Width="416">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="327" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="PasswordBox"
                         Text="{Binding Password}"
                         Foreground="{Binding PasswordTextColor}"
                         Background="#2C2C3A"
                         BorderBrush="#4A4A5E"
                         BorderThickness="1"
                         Margin="47,10,-47,10"
                         Padding="10"
                         Visibility="{Binding TextBoxVisibility}"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         HorizontalAlignment="Left"
                         Width="322">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="GotFocus">
                            <i:InvokeCommandAction Command="{Binding PasswordGotFocusCommand}" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="LostFocus">
                            <i:InvokeCommandAction Command="{Binding PasswordLostFocusCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <PasswordBox x:Name="HiddenPasswordBox"
                             helpers:PasswordHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                             Foreground="White"
                             Background="#2C2C3A"
                             BorderBrush="#4A4A5E"
                             BorderThickness="1"
                             Margin="47,10,-47,10"
                             Padding="10"
                             Width="322"
                             Visibility="{Binding PasswordBoxVisibility}"
                             Grid.Column="0" 
                             Grid.ColumnSpan="2"
                             HorizontalAlignment="Left"/>

                <Button x:Name="TogglePasswordButton"
                        Margin="0,20,-12,20"
                        Command="{Binding TogglePasswordCommand}"
                      
                        Grid.Column="1">

                    <Image x:Name="PasswordToggleImage"
                           Source="{Binding ToggleButtonIcon}"
                           Width="18"
                           Height="20"
                           RenderTransformOrigin="9.015,-1.573" />
                </Button>
            </Grid>

            <!-- Forgot Password -->
            <Grid x:Name="b2Grid"
                  Height="30"
                  Width="416">
                <Button Content="Forgot your password?"
                        Background="Transparent"
                        Foreground="#0078D4"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand"
                        Margin="0,0,51,10"
                        HorizontalAlignment="Right">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="Forgot your password?"
                                       Foreground="#0078D4"
                                       TextDecorations="Underline"
                                       Cursor="Hand" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid x:Name="bGrid"
                  Height="65"
                  Width="416">
                <Button Content="Log In"
                        Width="300"
                        Height="58"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="16"
                        Cursor="Hand"
                        Margin="58,-3,58,10" />
            </Grid>

        </StackPanel>
        <Image Margin="368,100,368,270"
               Source="/Assets/User2.ico"
               Stretch="Fill" />

    </Grid>
</Window>
