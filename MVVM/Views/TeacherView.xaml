<UserControl x:Class="UBYS_WPF.MVVM.Views.TeacherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UBYS_WPF.MVVM.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Background="#1E1E2F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Background="#2A2A3A"
              Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button Content="Ders Onay"
                    Grid.Row="0"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0" />
            <Button Content="Ders Programı"
                    Grid.Row="1"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0" />
            <Button Content="Notlar"
                    Grid.Row="2"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0" />
            <Button Content="Anketler"
                    Grid.Row="3"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0" />
            <Button Content="Mesajlar"
                    Grid.Row="4"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0" />
        </Grid>

        <!-- Üst Bilgi Alanı -->
        <DockPanel Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Background="#282838"
                   Height="50">
            <TextBlock Text=" "
                       Foreground="White"
                       FontSize="16"
                       Margin="10,0,0,0" />
            <TextBlock Text=" "
                       Foreground="White"
                       FontSize="16"
                       Margin="10,0,0,0" />
        </DockPanel>
    </Grid>
</UserControl>
