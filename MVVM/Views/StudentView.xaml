<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UBYS_WPF.MVVM.Views"
        x:Class="UBYS_WPF.MVVM.Views.StudentView"
        mc:Ignorable="d"
        Title="Student"
        Height="450"
        Width="800"
        Background="#1E1E2F">
    <Grid>
        <!-- Üst Bilgi (Ad, Soyad, Öğrenci No) -->
        <Border Background="#2C2C3A"
                Height="60"
                VerticalAlignment="Top">
            <TextBlock Text="Defne ÇİVRİLLİ 220401002"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="363,0,0,0" />
        </Border>

        <!-- Sol Panel -->
        <Border Background="#2C2C3A"
                Width="200"
                HorizontalAlignment="Left">
            <StackPanel>
                <Button Content="📅 Ders Programı"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="70"
                        Cursor="Hand" />
                <Button Content="✅ Ders Seçimi"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="70"
                        Cursor="Hand" />
                <Button Content="📖 Notlar"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="70"
                        Cursor="Hand" />
                <Button Content="✉️ Mesajlar"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="70"
                        Cursor="Hand" />
                <Button Content="📊 Anketler"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Height="70"
                        Cursor="Hand" />
            </StackPanel>
        </Border>

        <!-- İçerik Alanı -->
        <Grid Margin="210,70,10,10">
            <TextBlock Text="Öğrenci Ana Sayfası"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
