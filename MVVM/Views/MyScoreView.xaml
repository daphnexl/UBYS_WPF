<UserControl x:Class="UBYS_WPF.MVVM.Views.MyScoreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:UBYS_WPF.MVVM.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!-- Bind ViewModel -->
    <!--<UserControl.DataContext>
        <vm:MyScoreVM/>
    </UserControl.DataContext>-->

    <Grid Background="#0D1B2A"
          Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="My Scores"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="10"
                   Grid.Row="0" />

        <!-- Grade Table -->
        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <!-- Class Names -->
                <ColumnDefinition Width="3*" />
                <!-- Grades -->
            </Grid.ColumnDefinitions>

            <!-- Long white TextBoxes stacked vertically (7 times) -->
            <StackPanel Orientation="Vertical"
                        Grid.Column="0"
                        Margin="13">
                <!-- 7 TextBox controls -->
                <TextBox Text="{Binding CourseName}"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="White"
                         Margin="0,12"
                         VerticalAlignment="Top" />
                <TextBox Text="{Binding CourseName}"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="White"
                         Margin="0,12"
                         VerticalAlignment="Top" />
                <TextBox Text="{Binding CourseName}"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="White"
                         Margin="0,12"
                         VerticalAlignment="Top" />
                <TextBox Text="{Binding CourseName}"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="White"
                         Margin="0,12"
                         VerticalAlignment="Top" />
                <TextBox Text="{Binding CourseName}"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="White"
                         Margin="0,12"
                         VerticalAlignment="Top" />
                <TextBox Text="{Binding CourseName}"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="White"
                         Margin="0,12"
                         VerticalAlignment="Top" />
                <TextBox Text="{Binding CourseName}"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="White"
                         Margin="0,12"
                         VerticalAlignment="Top" />
            </StackPanel>

            <!-- You can add additional columns for grades or other content -->
            <DataGrid ItemsSource="{Binding Grades}"
                      AutoGenerateColumns="False"
                      Background="#1B263B"
                      Foreground="White"
                      BorderBrush="White"
                      Grid.Column="1"
                      Margin="5"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Midterm"
                                        Binding="{Binding Midterm}"
                                        Width="*" />
                    <DataGridTextColumn Header="Final"
                                        Binding="{Binding Final}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
