<UserControl x:Class="UBYS_WPF.MVVM.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UBYS_WPF.MVVM.Views"
             mc:Ignorable="d"
             Background="#7986CB"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Image Source="{Binding User.ImagePath}"
               Height="130"
               Margin="341,90,341,0"
               Width="121"
               VerticalAlignment="Top" />
        <Label Content="{Binding User.Role}"
               HorizontalAlignment="Center"
               Margin="0,258,0,0"
               VerticalAlignment="Top"
               Height="43"
               Width="208"
               RenderTransformOrigin="-0.103,0.148"
               FontWeight="Bold"
               FontSize="24" />
        <Label Content="{Binding User.FullName}"
               HorizontalAlignment="Center"
               Margin="0,306,0,0"
               VerticalAlignment="Top"
               Height="43"
               Width="208"
               RenderTransformOrigin="-0.103,0.148"
               FontWeight="Bold"
               FontSize="24" />
        <Label Content="{Binding User.Email}"
               HorizontalAlignment="Center"
               Margin="0,349,0,0"
               VerticalAlignment="Top"
               Height="43"
               Width="208"
               RenderTransformOrigin="-0.103,0.148"
               FontWeight="Bold"
               FontSize="24" />


    </Grid>
</UserControl>
