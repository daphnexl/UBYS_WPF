<Window x:Class="UBYS_WPF.MVVM.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main View"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">
    <Grid>
        <Border Background="#2C2C3A"
                Height="80"
                VerticalAlignment="Top">
            <TextBlock Text="University Information Management System"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Border>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="320">
            <TextBox x:Name="UsernameTextBox"
                     Width="300"
                     Height="40"
                     Foreground="Gray"
                     Background="#2C2C3A"
                     BorderBrush="#4A4A5E"
                     BorderThickness="1"
                     Text="ID Number: XXXXXXXXXXX"
                     Margin="0,10,0,10"
                     Padding="10" />
            <PasswordBox x:Name="PasswordBox"
                         Width="300"
                         Height="40"
                         Foreground="Gray"
                         Background="#2C2C3A"
                         BorderBrush="#4A4A5E"
                         BorderThickness="1"
                         Margin="0,0,0,10"
                         Padding="10" />

            <!-- Forgot Password -->
            <Button Content="Forgot your password?"
                    Background="Transparent"
                    Foreground="#0078D4"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="Forgot your password?"
                                   Foreground="#0078D4"
                                   TextDecorations="Underline"
                                   Cursor="Hand" />
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Log In"
                    Height="45"
                    Width="300"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    Cursor="Hand" />
        </StackPanel>
    </Grid>
</Window>
